terraform {
  backend "gcs" {
    bucket  = "bindplane-tf-state-bucket"
    prefix  = "bindplane/state"
  }

  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 5.0"
    }
  }
}

provider "google" {
  credentials = file(var.credentials_file)
  project     = var.project_id
  region      = var.region
  zone        = var.zone
}
